generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  Student
  Mentor
  Tutor
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(Student)
  createdAt DateTime @default(now())

  // Relations for mentor-student mapping
  mentorMappings  MentorStudentMap[] @relation("MentorRelation")
  studentMappings MentorStudentMap[] @relation("StudentRelation")
}

model MentorStudentMap {
  id        Int      @id @default(autoincrement())
  mentorId  Int
  studentId Int
  createdAt DateTime @default(now())

  mentor  User @relation("MentorRelation", fields: [mentorId], references: [id], onDelete: Cascade)
  student User @relation("StudentRelation", fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([mentorId, studentId])
  @@index([mentorId])
  @@index([studentId])
}
